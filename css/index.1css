
body {height: 5000px;}


.bars {width: 84px; height: 88px; position: relative;  cursor: pointer; margin: auto;}
.bar {width: 36px; height: 3px; background-color: aqua; position: absolute; transform-origin: center; animation-duration: 1s; animation-fill-mode: forwards;}
.bar1 {top: 33px; left: 24px;}
.bar2 {top: 43px; left: 24px;}
.bar3 {top: 53px; left: 24px;}

@keyframes bar1 {
	0% {}
	40% {top: 43px; transform: rotate(0deg)}
	100% {top: 43px; transform: rotate(-225deg);}
}
@keyframes bar2 {
	0% {opacity: 1;}
	40% {opacity: 0;}
	100% {opacity: 0;}
}
@keyframes bar3 {
	0% {}
	40% {top: 43px; transform: rotate(0deg);}
	100% {top: 43px; transform: rotate(-135deg);}
}

@keyframes bar1-rev {
	0% {top: 43px; transform: rotate(-225deg);}
	60% {top: 43px; transform: rotate(0deg);}
	100% {top: 33px; transform: rotate(0deg);}
}
@keyframes bar2-rev {
	0% {opacity: 0;}
	60% {opacity: 0;}
	100% {opacity: 1;}
}
@keyframes bar3-rev {
	0% {top: 43px; transform: rotate(-135deg);}
	60% {top: 43px; transform: rotate(0deg);}
	100% {top: 53px; transform: rotate(0deg);}
}


.main-wrap {width: 100%; height: 100vh; position: relative;}
.main-wrap .banner {width: 100%; height: 100%; position: absolute; background-color: #111; 
background-position: center; background-repeat: no-repeat; background-size: cover; display: flex; flex-direction: column; justify-content: center; align-items: center; color: #fff;} 
.main-wrap .banner1 {background-image: url(../img/c-sl-000.jpg);} 
.main-wrap .banner2 {background-image: url(../img/c-sl-004.jpg);} 
.main-wrap .banner3 {background-image: url(../img/c-sl-005.jpg);} 
.main-wrap .symbol {width: 20vw; margin-bottom: 1rem;}
.main-wrap .slogan {font-size: 4vw; text-align: center; margin-bottom: 1rem; transition: all 0.5s; transform: scale(1); opacity: 1;}
.main-wrap .writer {font-size: 1.5vw; color: #f7ba4a; transition: all 0.5s; transform: translateY(0); opacity: 1;}
